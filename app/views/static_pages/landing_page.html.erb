	<div id="featured" class="container">
		<div class="row">
			<div class="col-md-6
			">
				<div id="carousel-example-generic" class="carousel slider" data-ride="carousel">
					<!--indicators-->
					<ol class="carousel-indicators">
						<% @products.each do |product| %>
						<li data-target="#carousel-example-generic" data-slide-to="<%= product.id %>" class="<%= " active" if product == @products.first %>"></li>
						<% end %>
					</ol>

					<!--wrapper for slides-->
					<div class="carousel-inner" role="listbox">
						<% @products.each do |product| %>
						<div class="item<%= " active" if product == @products.first %>">
							<img><%= link_to image_tag(product.image_url, class: "img-responsive"), product %></img>
							<div class="carousel-caption">
								<h3><%= product.name %></h3>
							</div>
						</div>
						<% end %>
					</div>
				</div>
				<!--end carousel-->	
			</div>
			<div class="col-md-6">	
				<h1 class="section-title center">STAFF <strong class="color">FAVORITES</strong>!</h1>
				<div class="section-title center">
					<p>We are constantly getting in great bikes from all around the city! Here are some of our current favorites! Be sure to check them out, or you can go straight on to our products page to see all the wonderful bikes we have in stock.</p>
				</div>
				<div class="section-title center">
					<%= link_to "All Bikes!", products_path, :class => "btn btn-primary btn-xl" %>
				</div>
			</div>
		</div>
	</div>
